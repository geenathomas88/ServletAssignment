	<servlet-mapping>
		<servlet-name>showUser</servlet-name>
		<url-pattern>/showUser</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>getcompose</servlet-name>
		<servlet-class>com.pages.MessageCompose</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>getcompose</servlet-name>
		<url-pattern>/getcompose</url-pattern>
	</servlet-mapping>	
	<servlet>
