<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>ServletAssignment</display-name>
  <welcome-file-list>
    <welcome-file>login.html</welcome-file>
   </welcome-file-list>
   
   <listener>
   	 <listener-class>com.common.DatabaseListener</listener-class>
   </listener>
   
    <!-- Filter -->
  <filter>
    <filter-name>AuthenticationFilter</filter-name>
    <filter-class>com.filter.AuthenticationFilter</filter-class>
  </filter>
	<filter-mapping>
		<filter-name>AuthenticationFilter</filter-name>
		<url-pattern>/inbox</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AuthenticationFilter</filter-name>
		<url-pattern>/compose.html</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AuthenticationFilter</filter-name>
		<url-pattern>/drafts</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AuthenticationFilter</filter-name>
		<url-pattern>/sent</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AuthenticationFilter</filter-name>
		<url-pattern>/viewmessage</url-pattern>
	</filter-mapping>	
	<filter-mapping>
		<filter-name>AuthenticationFilter</filter-name>
		<url-pattern>/showUser</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AuthenticationFilter</filter-name>
		<url-pattern>/getcompose</url-pattern>
	</filter-mapping>		
   <!-- filter -->
   
   	<servlet>
		<servlet-name>welcome</servlet-name>
		<servlet-class>com.welcome.WelcomeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>welcome</servlet-name>
		<url-pattern>/welcome</url-pattern>
	</servlet-mapping>
   
